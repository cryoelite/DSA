{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clang-tidy",
      "type": "shell",
      "command": "clang-tidy",
      "args": ["${file}", "--", "--std=c++20"],
      "problemMatcher": []
    },
    {
      "label": "Valgrind (memcheck) â€” run active binary",
      "type": "shell",
      "dependsOn": "Build (clang++ C++20 strict O1)",
      "command": "valgrind",
      "args": [
        "-s",
        "--leak-check=full",
        "--show-leak-kinds=all",
        "--track-origins=yes",
        "--error-exitcode=1",
        "${fileDirname}/${fileBasenameNoExtension}",
        "LOCAL"
      ],
      "problemMatcher": []
    },
    {
      "label": "Build (clang++ C++20 strict O1)",
      "type": "shell",
      "dependsOn": "Clang-tidy",
      "command": "clang++",
      "args": [
        "-std=c++20",
        "-O1",
        "-g",
        "-flto",
        "-DNDEBUG",
        "-Wall",
        "-Wextra",
        "-Werror",
        "-Wpedantic",
        "-pedantic-errors",
        "-Wconversion",
        "-Wsign-conversion",
        "-Wshadow",
        "-Wformat=2",
        "-Wimplicit-fallthrough",
        "-Wnull-dereference",
        "-Wextra-semi",
        "-fno-gnu-keywords",
        "-Wno-missing-prototypes",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
